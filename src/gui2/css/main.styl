body
  body()
  // IE6 Fixed Position Jitter Fix
  -background-image: url(about:blank)
  -background-attachment: fixed
  margin-top: body-top

.hide
  display: none
#head
  position: fixed
  top: 0
  -position: absolute
  -top: expression(eval(document\.documentElement\.scrollTop))
  left: 0
  width: 100%
  white-space: nowrap
  background: sky-down
  background: linear-gradient(to top, sky-down, sky-up)
  border-bottom: 1px solid black

  label
    display: inline-block
    position: relative
    top: 1px
    background: body-color
    border: 1px solid tabs-outline
    border-radius: tabs-radius tabs-radius 0 0
    margin: tabs-margin
    margin-bottom: 0
    padding: tabs-padding

    &.active
      border-bottom: 1px solid body-color
      padding-top: tabs-active-padding

    div
      position: absolute
      z-index: 10
      left: 1ex
      top: 1em
      background: white
      border: 1px solid green

      a
        display: block
        padding: 0 1em
        text-decoration: none
        color: black

        &:hover
          background: red

